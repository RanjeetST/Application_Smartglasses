<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/predictive_maintenance_dashboard_device_list_item_actions_configure_wifi"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_wifi_24"
        android:layout_marginRight="16dp"
        app:tint="@color/colorConnectivityOffline" />

    <ImageView
        android:id="@+id/predictive_maintenance_dashboard_device_list_item_actions_configure_certificates"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_vpn_key_24"
        android:layout_marginRight="16dp"
        app:tint="@color/colorConnectivityOffline" />


</LinearLayout>