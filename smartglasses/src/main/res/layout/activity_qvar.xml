<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blue">
    <com.youth.banner.Banner
        android:id="@+id/mbanner"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        app:banner_auto_loop="false"
        app:banner_indicator_normal_color="@color/black"
        app:banner_indicator_selected_color="@color/white"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp">
    <ImageView
        android:id="@+id/qvarleft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/leftwhite"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"/>
    <ImageView
        android:id="@+id/qvarright"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/rightwhite"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"/>
</RelativeLayout>

    <LinearLayout
        android:id="@+id/qrbackingesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/backto"
        android:layout_marginTop="100dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/xiangyou"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to SelectMode"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>